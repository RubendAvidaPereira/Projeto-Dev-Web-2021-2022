<!DOCTYPE html>
<%- include("../include/student/student_head") %>

<!-- Footer -->
<%- include("../include/student/student_utils") %>

<!-- Content -->
<body>
   <%- include("../include/student/student_navbar") %>
   <div class="main">
      <div class="mt-4 mx-4 d-flex justify-content-center align-items-center">
         <div class="card w-50 shadow">
            <div class="card-body statistic">
               <div class="row mt-2 mx-2">
                  <h3 class="heading">Perfil do Estudante</h3>
               </div>
               <div class="row mt-3 mx-2">
                  <div class="col-lg-12">
                     <label for="student_id"><strong>ID</strong></label>
                     <input
                        disabled
                        type="text"
                        class="form-control mt-1"
                        placeholder="<%= json_student[0].id %>"
                     />
                  </div>
               </div>
               <div class="row mt-3 mx-2">
                  <div class="col-lg-12">
                     <label for="student_name"><strong>Nome Completo</strong></label>
                     <input
                        disabled
                        type="text"
                        class="form-control mt-1"
                        placeholder="<%= json_student[0].name %>"
                     />
                  </div>
               </div>
               <div class="row mt-3 mb-3 mx-2">
                  <div class="col-lg-12">
                     <label for="student_name"><strong>E-mail</strong></label>
                     <input
                        disabled
                        type="text"
                        class="form-control mt-1"
                        placeholder="<%= json_student[0].email %>"
                     />
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</body>
