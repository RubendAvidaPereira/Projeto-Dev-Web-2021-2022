<!DOCTYPE html>
<%- include("../include/student/student_head") %>

<!-- Content -->

<body>
   <%- include("../include/student/student_navbar") %>

   <!-- Footer -->
   <%- include("../include/student/student_utils") %>

   <div class="main">
      <div class="container w-100">
         <div class="card shadow mt-4">
            <div class="card-body statistic w-100">
               <div class="row">
                  <div class="col-lg-12">
                     <h2 class="heading"><strong>Pauta</strong></h2>
                  </div>
               </div>
               <div class="row mt-3">
                  <div class="col-lg-11 mx-4">
                     <table class="table table-borderless table-lg">
                        <thead style="border-bottom: 3px solid #155b94;">
                           <tr class="heading">
                              <th class="h4" style="font-weight: bold !important;">Disciplina</th>
                              <th class="text-center h4" style="font-weight: bold !important;">Resultado</th>
                              <th class="text-center h4" style="font-weight: bold !important;">Aprovação</th>
                           </tr>
                        </thead>
                        <tbody>
                            <% for (i=0; i<json_submission.length; i++) { %>
                                <tr style="height: 3.5rem !important;">
                                    <td><%= json_submission[i].course_name %></td>
                                    <% if (json_submission[i].test_result < 0 || json_submission[i].test_result == null) { %>
                                        <td class="text-center text-await">Ainda não Corrigido</td>
                                        <td class="text-center text-await"><i class="bi bi-hourglass-split"></i></td>
                                    <% } else { %>
                                        <td class="text-center"><%= json_submission[i].test_result %></td>
                                        <% if (json_submission[i].test_result > 10) { %>
                                            <td class="text-center text-success"><strong>Aprovado <i class="bi bi-check"></i></strong></td>
                                        <% } else { %>
                                            <td class="text-center text-danger"><strong>Reprovado <i class="bi bi-x"></i></strong></td>
                                        <% } %>
                                    <% } %>
                                    </tr>
                            <% } %>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</body>

<script>
    $('#searchText').hide();
 </script>
