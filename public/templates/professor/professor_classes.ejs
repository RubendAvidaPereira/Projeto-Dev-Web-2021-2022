<!DOCTYPE html>
<%- include("../include/professor/professor_head") %>

<!-- Content -->

<body>
   <%- include("../include/professor/professor_navbar") %>

   <!-- Footer -->
   <%- include("../include/professor/professor_utils") %>

   <div class="main">
      <div class="container d-flex justify-content-center align-items-center w-100">
         <div class="card shadow w-75 mt-5">
            <div class="card-body statistic">
               <div class="row mt-2 mb-2 mx-1">
                  <h3 class="heading"><strong>Lista de Disciplinas</strong></h3>
               </div>
               <hr class="mx-3" />
               <div class="row mb-2">
                  <div class="col-lg-12 mt-4">
                     <table class="table table-lg table-borderless align-middle">
                        <thead style="border-bottom: 0px !important">
                           <tr>
                              <th
                                 colspan="30%"
                                 class="text-center"
                                 style="border-right: 4px solid #155b94 !important"
                              >
                                 <h5><strong>Abrir</strong></h5>
                              </th>
                              <th colspan="70%" class="d-flex justify-content-end">
                                 <h5><strong>Nome da Disciplina</strong></h5>
                              </th>
                           </tr>
                        </thead>
                        <tbody>
                           <% for (i=0; i < num_courses; i++) { %>
                           <tr>
                              <td
                                 colspan="30%"
                                 class="mt-2 mb-2 border-bottom-0 text-center"
                                 style="
                                    border-right: 4px solid #155b94 !important;
                                    font-weight: 500;
                                    font-size: x-large;
                                 "
                              >
                                 <a
                                    class="bi bi-eye"
                                    href="/professorClasses/<%= json_courses[i].id %>"
                                 ></a>
                              </td>
                              <td
                                 colspan="70%"
                                 class="mt-2 mb-2 d-flex justify-content-end border-bottom-0"
                              >
                                 <%= json_courses[i].type %>
                              </td>
                           </tr>
                           <% } %>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>

   <script>
      $('#addCourseBtn').hide();
      $('#addClassBtn').hide();
   </script>
</body>
