<!DOCTYPE html>
<%- include("../include/professor/professor_head") %>

<!-- Content -->

<body>
   <%- include("../include/professor/professor_navbar") %>

   <!-- Footer -->
   <%- include("../include/professor/professor_utils") %>

   <div class="main">
      <div class="container d-flex justify-content-center align-items-center w-100">
         <div class="card shadow w-75 mt-5">
            <div class="card-body statistic">
               <div class="row mt-2 mb-2">
                  <h4 class="heading"><strong>Lista de Disciplinas</strong></h4>
               </div>
               <div class="row mb-2">
                  <div class="col-lg-12 mt-4">
                     <table class="table table-lg table-borderless align-middle">
                        <thead style="border-bottom: 0px !important">
                           <tr>
                              <th colspan="30%" style="border-right: 2px solid #155b94 !important">
                                 <h5>#</h5>
                              </th>
                              <th colspan="70%" class="d-flex justify-content-end">
                                 <h5>Nome da Disciplina</h5>
                              </th>
                           </tr>
                        </thead>
                        <tbody>
                           <% for (i=0; i < num_courses; i++) { %>
                           <tr>
                              <td
                                 colspan="30%"
                                 class="mt-2 mb-2 border-bottom-0"
                                 style="border-right: 2px solid #155b94 !important"
                              >
                                 <%= json_courses[i].id %>
                              </td>
                              <td
                                 colspan="70%"
                                 class="mt-2 mb-2 d-flex justify-content-end border-bottom-0"
                              >
                                 <%= json_courses[i].type %>
                              </td>
                           </tr>
                           <% } %>
                        </tbody>
                     </table>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</body>
